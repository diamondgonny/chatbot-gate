# Docker Compose Environment Variables
# IMPORTANT: Copy this file to .env and fill in real values
# Never commit .env to version control

# MongoDB Configuration
# Use strong passwords in production!
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_INITDB_DATABASE=chatbot_gate

# Cloudflare Tunnel Token
# Get this from Cloudflare Zero Trust Dashboard -> Access -> Tunnels
TUNNEL_TOKEN=

# Backend Secrets
# Generate JWT secret: openssl rand -base64 32
JWT_SECRET=
OPENAI_API_KEY=
FRONTEND_URLS=https://your-vercel-app.vercel.app

# Optional: Docker image versioning
VERSION=latest
