# Production Secrets (DO NOT COMMIT)
# Copy this file to .env.local and fill in real values
# Add .env.local to .gitignore

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin_prod_user
MONGO_INITDB_ROOT_PASSWORD=<generate-strong-password-here>
MONGO_INITDB_DATABASE=chatbot_gate

# Backend Secrets
# Generate JWT secret: openssl rand -base64 32
JWT_SECRET=<generate-with-openssl-rand-base64-32>
OPENAI_API_KEY=sk-proj-...
FRONTEND_URLS=https://your-production-domain.com

# Cloudflare Tunnel Token
# Get this from Cloudflare Zero Trust Dashboard -> Access -> Tunnels
TUNNEL_TOKEN=<cloudflare-tunnel-token>

# Optional: Image versioning for CI/CD
VERSION=1.0.0
