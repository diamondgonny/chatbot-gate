# Docker Compose Environment Variables
# IMPORTANT: Copy this file to .env and fill in real values
# Never commit .env to version control

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_INITDB_DATABASE=chatbot_gate

# Generate JWT secret: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRES_IN=24h

# OpenAI API Key
OPENAI_API_KEY=

# Allowed frontend origins (comma-separated)
# Development: http://localhost:3000
# Production: Add your Vercel domain (e.g., https://your-app.vercel.app)
FRONTEND_URLS=https://your-vercel-app.vercel.app
VALID_CODES=sample-code-1,sample-code-2

# Optional: Docker image versioning (for GHCR deployment)
# Set to your GitHub repository in format: owner/repo
GITHUB_REPO=owner/chatbot-gate
VERSION=latest
